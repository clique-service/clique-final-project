<!doctype html>
<html lang="en">
<head>
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <meta charset="UTF-8">
    <title>Clique</title>
    <link rel="icon" href="/logo.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.1.2/foundation.min.css" />
    <style>
        .logo {
        height: 10em;
        width: 10em;
        display: block;
        margin: auto;
        }

        body {
        display: flex;
        align-items: center;
        justify-content: center;
        }
    </style>
</head>
<body class="text-center">
<div class="wrapper">
    <img src="/logo.png" class="logo" /><br />
    Thank you,  for supporting <strong>Clique</strong>.

    <script src="http://cdn.sockjs.org/sockjs-0.3.4.min.js"></script>
    <script src='https://npmcdn.com/vertx3-eventbus-client@3.2.1'></script>

    <script>
var eb = new EventBus('http://localhost:9000/eventbus');

eb.onopen = function() {
  // set a handler to receive a message
  eb.registerHandler('changes', function(error, message) {
    console.log('received a message: ', message.body);
  });

  // send a message
  eb.send('auth', {userId: '{{ this }}'});
}

</script>
</div>
</body>
</html>
